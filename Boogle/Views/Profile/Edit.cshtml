  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- Logo and responsive toggle -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="index.html">
          <span class="glyphicon glyphicon-fire"></span>
          Boogle
        </a>
      </div>
      <!-- Navbar links -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <a href="search.html">Search</a>
          </li>
          <li>
            <a href="user_books.html">My books</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="profile.html">My name</a>
          </li>
          <li>
            <img src="~/img/user_icon.png" class="img-responsive" alt="user icon" style="height: 30px; margin-top: 10px;" >
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

  <!-- Content -->
  <div class="container">

    <!-- Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Your account</h1>
      </div>
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 30px;">
      <div class="col-md-8 portfolio-item"></div>
      <div class="col-md-1 portfolio-item"></div>
      <div class="col-md-1 portfolio-item"></div>
      <div class="col-md-1 portfolio-item"></div>
    </div>

    <!-- Projects Row -->
    <div class="row">

      <div class="col-md-4 portfolio-item">
        <img class="img-responsive" src="img/avatar.png" alt="avatar picture">
      </div>
      <div class="col-md-8 portfolio-item">

        <form id="myForm" action="profile.html" method="post" role="form">
          <div class="input-group" style="margin-top: 50px;">
            <span class="input-group-addon">Pseudo</span>
            <input class="form-control" type="text" id="pseudo" name="pseudo" placeholder="former pseudo here">
          </div>
          <div class="input-group" style="margin-top: 20px;">
            <span class="input-group-addon">Email</span>
            <input class="form-control" type="text" id="mail" name="mail" placeholder="former email here">
          </div>
          <div class="input-group" style="margin-top: 20px;">
            <span class="input-group-addon">Date of birth</span>
            <input class="form-control" type="text" id="dob" name="dob" placeholder="former DOB here">
          </div>

          <!-- Trigger the modal with a button -->
          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="margin-top: 20px; float: right;">Save the changes</button>

          <!-- Modal -->
          <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Profile editing</h4>
                </div>
                <div class="modal-body">
                  <p>Are you sure you want to save the changes ?</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                  <button type="button" class="btn btn-default" onclick="event.preventDefault();document.getElementById('myForm').submit();">YES</button>
                </div>
              </div>

            </div>
          </div>
        </form>
      </div>

    </div>

    <hr>

    <!-- Footer -->
    <footer>
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright &copy; BOOGLE 2019</p>
        </div>
      </div>
      <!-- /.row -->
    </footer>

  </div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery-1.11.3.min.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>

</body>

</html>
