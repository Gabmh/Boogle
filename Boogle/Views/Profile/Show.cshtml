@{
    Layout = "_Main";
}

<!DOCTYPE html>
<!-- Template by Quackit.com -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link rel="stylesheet" href="~/css/custom.css" />
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Logo and responsive toggle -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home">
                    <span class="glyphicon glyphicon-fire"></span>
                    Boogle
                </a>
            </div>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/Search">Search</a>
                    </li>
                    <li>
                        <a href="#">My books</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/Profile/Show">@ViewData["Nom"]</a>
                    </li>
                    <li>
                        <img src="~/img/user_icon.png" asp-append-version="true" class="img-responsive" alt="user icon" style="height: 30px; margin-top: 10px;">
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Content -->
    <div class="container">

        <!-- Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Your account</h1>
            </div>
        </div>
        <!-- /.row -->

        <div class="row" style="margin-bottom: 30px;">
            <div class="col-md-8 portfolio-item"></div>
            <div class="col-md-1 portfolio-item"></div>
            <div class="col-md-1 portfolio-item"></div>
            <div class="col-md-1 portfolio-item"></div>
            <a href="/Profile/Edit">Modify</a>
            <button type="button" class="btn btn-info" onclick="window.location.href='/Profile/Edit'"><span class="glyphicon glyphicon-pencil"></span></button>
        </div>

        <!-- Projects Row -->
        <div class="row">

            <div class="col-md-4 portfolio-item">
                <img class="img-responsive" src="~/img/avatar.png" asp-append-version="true" alt="avatar picture">
            </div>
            <div class="col-md-8 portfolio-item">
                <h3 class="text">
                    @ViewData["Nom"]
                </h3>

                <table class="table table-bordered" style="margin-top: 50px;">
                    <tbody>
                        <tr>
                            <th scope="row">Mail</th>
                            <td>@ViewData["Mail"]</td>
                        </tr>
                        <tr>
                            <th scope="row">Date of Birth</th>
                            <td>@ViewData["Birth"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; BOOGLE 2019</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    
</body>

</html>
